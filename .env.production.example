# -----------------------------------------------------------------------------
# Storage with aws s3 sdk (e.g. Cloudflare R2)
# -----------------------------------------------------------------------------
STORAGE_ENDPOINT = ""
STORAGE_REGION = "auto"
STORAGE_ACCESS_KEY = ""
STORAGE_SECRET_KEY = ""
STORAGE_BUCKET = ""
STORAGE_DOMAIN = ""  # optional CDN domain

# Download mode for assets (Step-07)
# - presigned: generate a short-lived signed URL (302 redirect by default; support 200 JSON via ?format=json)
# - proxy:     stream file via server (no public URL; each access requires auth)
STORAGE_DOWNLOAD_MODE = "presigned"

# TTL of presigned URL in seconds (default 300). Only takes effect when STORAGE_DOWNLOAD_MODE=presigned
STORAGE_SIGN_URL_TTL_SEC = "300"

# -----------------------------------------------------------------------------
# Renditions behavior
# -----------------------------------------------------------------------------
# When set to 1, if user requests a rendition format that matches the original
# asset file_format (e.g., original is GLB and user requests GLB), the server
# will mark the rendition as success immediately and reuse the original file.
# Default 0 (disabled) to keep tests deterministic.
RENDITIONS_INSTANT_READY_FOR_ORIGINAL = "0"

# -----------------------------------------------------------------------------
# Auto finalize (Vercel Cron)
# -----------------------------------------------------------------------------
# Cron path: /api/cron/hitem3d-auto-finalize runs every 10 minutes by vercel.json
# - Set AUTO_FINALIZE_LIMIT to control max tasks per run (default 20)
# - Optional AUTO_FINALIZE_TOKEN: you can call the cron endpoint manually with
#   ?token=<AUTO_FINALIZE_TOKEN> as query when not triggered by Vercel Cron
AUTO_FINALIZE_LIMIT = "20"
AUTO_FINALIZE_TOKEN = ""

